<link rel ="stylesheet" type="text/css" href="css/style.css">
<header>
{{# each products }}
    <div class="row">
        {{# each this }}
            <div class ="col-sm-4 co l-md-4 box">
                <div class="thumbnail rectangle">
                    <img src=" {{#each this}} {{ imagePath }} {{/each}} " alt="..." class ="img-responsive">
                    <div class="caption">
                        <h3> {{{title}}} </h3>
                        <p class="description"> {{#each this}} {{ description }} {{/each}} </p>
                        <div class="clearfix">
                            <div class ="price "> ${{#each this}} {{ price }} {{/each}} </div>
                            <a href="/add-to-cart/{{this._id}}" class="btn btn-success pull-right" role="button">Add to Cart</a>
                        </div>
                    </div>            
                </div>
            </div>
        {{/each}}
    </div>
{{/each}}
</header>